<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".vue.MenuPrincipal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Bonjour"
        android:text="Bonjour "
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_Absences"
        android:text="Absences"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/less_round_button"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_Solde"
        android:text="Solde"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/less_round_button"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_Historique"
        android:text="Historique"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/less_round_button"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_Notes"
        android:text="Notes"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/less_round_button"/>

</LinearLayout>